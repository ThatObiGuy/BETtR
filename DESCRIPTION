Type: Package
Package: bettr
Title: Calculate Shannon Entropy and Provide Optimisation Functions
Version: 0.1.0
Authors@R: c(
    person("Owen", "O'Connor", email = "owen.oconnor.2024@mumail.ie", role = c("aut", "cre")),
    person("Sorin", "Bivol", email = "sorin.bivol.2023@mumail.ie", role = c("aut")),
